<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> Es prohibido guardar este articulo:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :title %>
  </div>
  

  <div class="field">
    <%= f.label "Categoria" %><br />
    <%= f.text_field :category %>
  </div>
 
  <div class="field">
    <%= f.label :contenido %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :Fecha_de_publicacion %><br>
    <%= f.datetime_select :published_at %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
